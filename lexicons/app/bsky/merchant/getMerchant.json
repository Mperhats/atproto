{
  "lexicon": 1,
  "id": "app.bsky.merchant.getMerchant",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get detailed profile view of an merchant. Does not require auth, but contains relevant metadata with auth.",
      "parameters": {
        "type": "params",
        "required": ["merchant"],
        "properties": {
          "merchant": {
            "type": "string",
            "format": "at-identifier",
            "description": "Handle or DID of merchant account to fetch profile of."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "ref",
          "ref": "app.bsky.merchant.defs#merchantView"
        }
      }
    }
  }
}
